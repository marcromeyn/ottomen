server {

    listen   443;

    ssl    on;
    ssl_certificate   /code/ottomen/docker/nginx/ssl/1_ottomenn.com_bundle.crt;
    ssl_certificate_key     /code/ottomen/docker/nginx/ssl/ottomenn.com.key;

    server_name ottomenn.com;
    charset utf-8;

    location /static {
        alias /code/ottomen/web/frontend/static;
    }

    location / {
        proxy_pass http://web:5004;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
